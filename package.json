{
  "name": "react-portfolio",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Modern, high-performance portfolio showcasing frontend engineering expertise with React 19, TypeScript, and WCAG AA accessibility compliance",
  "author": {
    "name": "Afton Gauntlett",
    "email": "hello@aftongauntlett.com",
    "url": "https://aftongauntlett.com"
  },
  "homepage": "https://aftongauntlett.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/aftongauntlett/react-portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/aftongauntlett/react-portfolio/issues"
  },
  "keywords": [
    "portfolio",
    "react",
    "typescript",
    "vite",
    "tailwindcss",
    "framer-motion",
    "accessibility",
    "wcag",
    "frontend",
    "responsive"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "ANALYZE=true npm run build && open dist/stats.html",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "clean": "rm -rf dist node_modules/.vite",
    "release:patch": "npm run health:check && npm version patch",
    "release:minor": "npm run health:check && npm version minor",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deps:check": "npm outdated",
    "health:check": "npm run type-check && npm run lint && npm run test:run && npm run build && npm run security:audit"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lottie-react": "^2.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  }
}
